---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

// Diccionario filosófico de la A a la Z
const philosophicalTerms = [
	// A
	{
		term: "A priori / A posteriori",
		definition: "Distinción sobre el origen del conocimiento. A priori es el conocimiento independiente de la experiencia. A posteriori es el conocimiento que depende de la experiencia.",
		philosopher: "Immanuel Kant",
		example: "La proposición 'todos los solteros no están casados' es a priori. 'Está lloviendo fuera' es a posteriori."
	},
	{
		term: "Abstracción",
		definition: "Proceso mental por el cual se aíslan características comunes de objetos o ideas para formar conceptos generales.",
		philosopher: "Aristóteles",
		example: "El concepto de 'animal' es una abstracción de las características comunes de los seres vivos que se mueven."
	},
	{
		term: "Alienación",
		definition: "Estado en el que el ser humano se siente ajeno a sí mismo o a su trabajo, especialmente en el contexto social o económico.",
		philosopher: "Karl Marx",
		example: "El obrero se aliena cuando su trabajo no le pertenece, sino al capitalista."
	},
	// B
	{
		term: "Bien",
		definition: "Aquello que es moralmente correcto, deseable o beneficioso.",
		philosopher: "Platón",
		example: "La Idea del Bien es el principio supremo en la filosofía platónica."
	},
	{
		term: "Belleza",
		definition: "Cualidad de las cosas que produce placer estético y es objeto de reflexión filosófica en la estética.",
		philosopher: "Plotino",
		example: "La belleza es el resplandor de la verdad, según Plotino."
	},
	// C
	{
		term: "Categoría",
		definition: "Concepto fundamental que sirve para clasificar y organizar la realidad.",
		philosopher: "Aristóteles",
		example: "Las categorías de sustancia, cantidad, cualidad, etc."
	},
	{
		term: "Causalidad",
		definition: "Relación entre causa y efecto, fundamental en la explicación de los fenómenos.",
		philosopher: "David Hume",
		example: "No percibimos la causa, solo la sucesión constante de eventos."
	},
	{
		term: "Cogito, ergo sum",
		definition: "Fundamento de la duda metódica de Descartes. Es la primera verdad indudable que encuentra: la propia existencia como sujeto pensante.",
		philosopher: "René Descartes",
		example: "Aunque dude de todo, no puedo dudar de que estoy dudando, por lo tanto existo como ser pensante."
	},
	// D
	{
		term: "Dialéctica",
		definition: "Método de razonamiento que procede mediante el conflicto de opuestos. En Hegel, es el proceso (tesis-antítesis-síntesis) por el cual el Espíritu se desarrolla.",
		philosopher: "Georg Wilhelm Friedrich Hegel",
		example: "La historia progresa mediante la dialéctica: un statu quo (tesis) enfrenta una fuerza opuesta (antítesis) resultando en una nueva síntesis."
	},
	{
		term: "Devenir",
		definition: "Proceso de cambio y transformación constante de la realidad.",
		philosopher: "Heráclito",
		example: "Nadie se baña dos veces en el mismo río."
	},
	// E
	{
		term: "Esencia",
		definition: "Lo que hace que una cosa sea lo que es y no otra cosa.",
		philosopher: "Aristóteles",
		example: "La esencia del triángulo es ser una figura de tres lados."
	},
	{
		term: "Empirismo",
		definition: "Doctrina que sostiene que el conocimiento proviene principalmente de la experiencia sensorial.",
		philosopher: "John Locke",
		example: "La mente es una 'tabla rasa' al nacer."
	},
	// F
	{
		term: "Fenómeno",
		definition: "Aquello que se manifiesta a los sentidos, en oposición al noúmeno (lo que no se puede conocer directamente).",
		philosopher: "Immanuel Kant",
		example: "Solo podemos conocer los fenómenos, no las cosas en sí mismas."
	},
	{
		term: "Finalidad",
		definition: "Tendencia de algo a un fin o propósito, central en la teleología.",
		philosopher: "Aristóteles",
		example: "La finalidad de la semilla es convertirse en árbol."
	},
	// G
	{
		term: "Gnoseología",
		definition: "Rama de la filosofía que estudia la naturaleza, el origen y los límites del conocimiento.",
		philosopher: "Platón",
		example: "El mito de la caverna es una reflexión gnoseológica."
	},
	{
		term: "Gestalt",
		definition: "Teoría psicológica y filosófica que enfatiza la percepción de totalidades.",
		philosopher: "Max Wertheimer",
		example: "El todo es más que la suma de las partes."
	},
	// H
	{
		term: "Hedonismo",
		definition: "Doctrina ética que identifica el bien con el placer.",
		philosopher: "Epicuro",
		example: "El placer es el principio y fin de la vida feliz."
	},
	{
		term: "Humanismo",
		definition: "Corriente que pone al ser humano como centro de reflexión y valor.",
		philosopher: "Erasmo de Rotterdam",
		example: "El humanismo renacentista impulsó el estudio de las humanidades."
	},
	// I
	{
		term: "Idealismo",
		definition: "Doctrina que sostiene que la realidad es fundamentalmente mental o espiritual.",
		philosopher: "George Berkeley",
		example: "Ser es ser percibido."
	},
	{
		term: "Inmanencia",
		definition: "Cualidad de lo que existe y actúa en sí mismo, en oposición a la trascendencia.",
		philosopher: "Baruch Spinoza",
		example: "Dios es inmanente al mundo, no externo a él."
	},
	// J
	{
		term: "Juicio",
		definition: "Afirmación o negación que realiza el entendimiento sobre algo.",
		philosopher: "Immanuel Kant",
		example: "El juicio sintético a priori es central en la Crítica de la razón pura."
	},
	// K
	{
		term: "Katarsis",
		definition: "Purificación emocional, corporal, mental o espiritual a través del arte o la experiencia filosófica.",
		philosopher: "Aristóteles",
		example: "La tragedia griega produce katarsis en el espectador."
	},
	// L
	{
		term: "Logos",
		definition: "Razón o principio universal que ordena el cosmos.",
		philosopher: "Heráclito",
		example: "El logos es la ley universal del cambio."
	},
	{
		term: "Libertad",
		definition: "Capacidad de actuar según la propia voluntad.",
		philosopher: "Jean-Paul Sartre",
		example: "El hombre está condenado a ser libre."
	},
	// M
	{
		term: "Metafísica",
		definition: "Rama de la filosofía que estudia la naturaleza última de la realidad.",
		philosopher: "Aristóteles",
		example: "La metafísica pregunta por el ser en cuanto ser."
	},
	{
		term: "Monismo",
		definition: "Doctrina que sostiene que todo lo existente es de una sola sustancia o principio.",
		philosopher: "Baruch Spinoza",
		example: "Solo existe una sustancia: Dios o la Naturaleza."
	},
	// N
	{
		term: "Noúmeno",
		definition: "La cosa en sí, inaccesible a la experiencia, en oposición al fenómeno.",
		philosopher: "Immanuel Kant",
		example: "No podemos conocer el noúmeno, solo los fenómenos."
	},
	{
		term: "Nihilismo",
		definition: "Doctrina que niega la existencia de valores o significados objetivos.",
		philosopher: "Friedrich Nietzsche",
		example: "Dios ha muerto: el nihilismo es la consecuencia."
	},
	// O
	{
		term: "Ontología",
		definition: "Rama de la metafísica que estudia el ser y sus categorías fundamentales.",
		philosopher: "Martin Heidegger",
		example: "La pregunta por el ser es el centro de la ontología."
	},
	{
		term: "Ocasionalismo",
		definition: "Doctrina según la cual Dios es la causa de toda interacción entre mente y cuerpo.",
		philosopher: "Nicolas Malebranche",
		example: "Dios interviene en cada ocasión para unir mente y cuerpo."
	},
	// P
	{
		term: "Pragmatismo",
		definition: "Corriente filosófica que valora la verdad según sus efectos prácticos y útiles.",
		philosopher: "William James",
		example: "La verdad es lo que funciona en la práctica."
	},
	{
		term: "Panteísmo",
		definition: "Doctrina que identifica a Dios con el universo o la naturaleza.",
		philosopher: "Baruch Spinoza",
		example: "Dios es todo y todo es Dios."
	},
	// Q
	{
		term: "Qualia",
		definition: "Cualidades subjetivas de las experiencias conscientes.",
		philosopher: "Thomas Nagel",
		example: "¿Cómo es ser un murciélago? Se refiere a los qualia de la experiencia."
	},
	// R
	{
		term: "Racionalismo",
		definition: "Doctrina que sostiene que la razón es la principal fuente del conocimiento.",
		philosopher: "René Descartes",
		example: "Pienso, luego existo."
	},
	{
		term: "Realismo",
		definition: "Doctrina que afirma la existencia de una realidad independiente de la mente.",
		philosopher: "Tomás de Aquino",
		example: "El mundo existe aunque no lo percibamos."
	},
	// S
	{
		term: "Sofisma",
		definition: "Razonamiento falso o engañoso con apariencia de verdad.",
		philosopher: "Sofistas",
		example: "El sofisma se usa para persuadir sin buscar la verdad."
	},
	{
		term: "Sustancia",
		definition: "Aquello que existe por sí mismo y en lo que residen los accidentes.",
		philosopher: "Aristóteles",
		example: "La sustancia es el sujeto último de la realidad."
	},
	// T
	{
		term: "Teleología",
		definition: "Doctrina que explica los fenómenos por sus fines o propósitos.",
		philosopher: "Aristóteles",
		example: "La naturaleza no hace nada en vano, todo tiene un fin."
	},
	{
		term: "Trascendencia",
		definition: "Cualidad de lo que está más allá de los límites de la experiencia o la realidad mundana.",
		philosopher: "Emmanuel Levinas",
		example: "La trascendencia del Otro en la ética."
	},
	// U
	{
		term: "Utilitarismo",
		definition: "Doctrina ética que sostiene que la mejor acción es la que produce mayor felicidad para el mayor número.",
		philosopher: "John Stuart Mill",
		example: "El fin justifica los medios si produce felicidad general."
	},
	{
		term: "Utopía",
		definition: "Representación imaginaria de una sociedad ideal y perfecta.",
		philosopher: "Tomás Moro",
		example: "La obra 'Utopía' describe una sociedad perfecta e inalcanzable."
	},
	// V
	{
		term: "Virtud",
		definition: "Disposición habitual para obrar el bien.",
		philosopher: "Aristóteles",
		example: "La virtud es el justo medio entre dos extremos."
	},
	{
		term: "Voluntad de poder",
		definition: "Concepto central en la filosofía de Nietzsche, que describe la fuerza fundamental que impulsa al ser humano.",
		philosopher: "Friedrich Nietzsche",
		example: "La vida es voluntad de poder, no de conservación."
	},
	// Z
	{
		term: "Zoon politikón",
		definition: "Expresión griega que significa 'animal político', es decir, el ser humano como ser social por naturaleza.",
		philosopher: "Aristóteles",
		example: "El hombre es un zoon politikón, destinado a vivir en sociedad."
	}
];
---

<!doctype html>
<html lang="es">
	<head>
		<BaseHead title="Diccionario Filosófico" description={SITE_DESCRIPTION} />
		<style>
			:root {
				--color-primary: #2c3e50;
				--color-secondary: #4a6580;
				--color-accent: #e67e22;
				--color-light: #f5f7fa;
				--color-dark: #333;
			}
			
			body {
				font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
				line-height: 1.6;
				color: var(--color-dark);
				background-color: var(--color-light);
				margin: 0;
				padding: 0;
			}
			
			main {
				max-width: 1200px;
				margin: 0 auto;
				padding: 2rem;
			}
			
			.hero {
				text-align: center;
				padding: 3rem 1rem;
				background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
				color: white;
				border-radius: 10px;
				margin-bottom: 3rem;
			}
			
			.hero h1 {
				font-size: 2.8rem;
				margin-bottom: 1rem;
			}
			
			.hero p {
				font-size: 1.2rem;
				max-width: 600px;
				margin: 0 auto;
			}
			
			.search-container {
				margin: 2rem 0;
				text-align: center;
			}
			
			#search {
				width: 100%;
				max-width: 500px;
				padding: 12px 20px;
				border: 2px solid #ddd;
				border-radius: 50px;
				font-size: 1rem;
				outline: none;
				transition: all 0.3s;
			}
			
			#search:focus {
				border-color: var(--color-secondary);
				box-shadow: 0 0 0 3px rgba(74, 101, 128, 0.2);
			}
			
			.alphabet-nav {
				display: flex;
				flex-wrap: wrap;
				justify-content: center;
				gap: 10px;
				margin: 2rem 0;
			}
			
			.letter-btn {
				width: 40px;
				height: 40px;
				display: flex;
				align-items: center;
				justify-content: center;
				background: var(--color-secondary);
				color: white;
				border-radius: 50%;
				font-weight: bold;
				cursor: pointer;
				transition: all 0.3s;
				border: none;
			}
			
			.letter-btn:hover {
				background: var(--color-primary);
				transform: translateY(-3px);
			}
			
			.terms-grid {
				display: grid;
				grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
				gap: 2rem;
				margin-top: 2rem;
			}
			
			.term-card {
				background: white;
				border-radius: 10px;
				padding: 1.5rem;
				box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
				transition: transform 0.3s;
			}
			
			.term-card:hover {
				transform: translateY(-5px);
			}
			
			.term-title {
				color: var(--color-primary);
				margin-top: 0;
				border-bottom: 2px solid var(--color-accent);
				padding-bottom: 0.5rem;
			}
			
			.term-definition {
				color: #444;
			}
			
			.term-meta {
				background: var(--color-light);
				padding: 1rem;
				border-radius: 8px;
				margin: 1rem 0;
				font-size: 0.9rem;
			}
			
			.term-example {
				background: #fffaf0;
				padding: 1rem;
				border-left: 4px solid var(--color-accent);
				border-radius: 4px;
			}
			
			.example-title {
				font-weight: 600;
				margin-bottom: 0.5rem;
				color: var(--color-accent);
			}
			
			@media (max-width: 768px) {
				.terms-grid {
					grid-template-columns: 1fr;
				}
				
				.hero h1 {
					font-size: 2.2rem;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section class="hero">
				<h1>📚 Diccionario Filosófico</h1>
				<p>Explora los conceptos fundamentales de la filosofía a través de definiciones claras y concisas</p>
			</section>
			
			<div class="search-container">
				<input type="text" id="search" placeholder="Buscar término filosófico...">
			</div>
			
			<div class="alphabet-nav">
				<button class="letter-btn">A</button>
				<button class="letter-btn">B</button>
				<button class="letter-btn">C</button>
				<button class="letter-btn">D</button>
				<button class="letter-btn">E</button>
				<button class="letter-btn">F</button>
				<button class="letter-btn">H</button>
				<button class="letter-btn">I</button>
				<button class="letter-btn">M</button>
				<button class="letter-btn">N</button>
				<button class="letter-btn">P</button>
				<button class="letter-btn">R</button>
				<button class="letter-btn">S</button>
				<button class="letter-btn">T</button>
				<button class="letter-btn">U</button>
				<button class="letter-btn">V</button>
			</div>
			
			<div class="terms-grid">
				{philosophicalTerms.map((term) => (
					<article class="term-card">
						<h2 class="term-title">{term.term}</h2>
						<p class="term-definition">{term.definition}</p>
						<div class="term-meta">
							<p><strong>Filósofo:</strong> {term.philosopher}</p>
						</div>
						<div class="term-example">
							<div class="example-title">Ejemplo:</div>
							<p>{term.example}</p>
						</div>
					</article>
				))}
			</div>
		</main>
		<Footer />
		
		<script>
			document.addEventListener('DOMContentLoaded', function() {
				const searchInput = document.getElementById('search');
				const termCards = document.querySelectorAll('.term-card');
				const letterButtons = document.querySelectorAll('.letter-btn');
				
				// Función de búsqueda
				searchInput.addEventListener('input', function() {
					const searchText = this.value.toLowerCase();
					
					termCards.forEach(card => {
						const termText = card.querySelector('.term-title').textContent.toLowerCase();
						const definitionText = card.querySelector('.term-definition').textContent.toLowerCase();
						
						if (termText.includes(searchText) || definitionText.includes(searchText)) {
							card.style.display = 'block';
						} else {
							card.style.display = 'none';
						}
					});
				});
				
				// Filtrado por letra
				letterButtons.forEach(button => {
					button.addEventListener('click', function() {
						const letter = this.textContent;
						
						termCards.forEach(card => {
							const termText = card.querySelector('.term-title').textContent;
							if (termText.startsWith(letter)) {
								card.style.display = 'block';
								card.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
							} else {
								card.style.display = 'none';
							}
						});
					});
				});
			});
		</script>
	</body>
</html>
